<h2 class = "page-title">Add a Product</h2>

<div class="form-wrapper">
  <%= form_for @product, url: {action: "create"} do |f| %>
    <div class="form-field">
      <%= f.label :name, "Name:" %>
      <%= f.text_field :name %>
    </div>

    <div class="form-field">
      <%= f.label :price, "Price:" %>
      <%= f.text_field :price %>
    </div>

    <div class="form-field">
      <%= f.label :description, "Description:" %>
      <%= f.text_field :description %>
    </div>

    <div class="form-field">
      <%= f.label :image_url, "Image URL:" %>
      <%= f.text_field :image_url %>
    </div>

    <div class="form-field">
      <%= f.label :stock, "Quantity:" %>
      <%= f.text_field :stock %>
    </div>

    <div class="form-field checkbox">
      <%= f.check_box :is_retired, {}, true, false %>
      <%= f.label :is_retired, "Retire" %>
    </div>

    <%= hidden_field_tag :user_id, session[:current_user_id] %>

    <%= f.submit %>

  <% end %>
</div>
