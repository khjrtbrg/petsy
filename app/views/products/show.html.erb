<div class = "page-div">

<%= image_tag @product.image_url, :class => "show-image" %>
<div class = "show-text">
  <h1><%= @product.name %></h1>
    <p class = "show-attributes">$<%= @product.price %></p>
    <p class = "show-attributes">Description: <%= @product.description %></p>
    <p class = "show-attributes">Stock: <%= @product.stock %> remaining</p>
    <%= submit_tag "Add to Cart", :class => "button", :id => "cart-button" %>
    <div class = "show-destroy-edit">
      <tr>
        <td><%= link_to "Destroy", "/products/destroy/#{@product.id}", :class => "show-de-link" %></td>
        <td><%= link_to "Edit", "/products/#{@product.id}/edit",  :class => "show-de-link" %></td>
        <td><%= link_to "Add Category", "/products/#{@product.id}/newcategory",  :class => "show-de-link"  %></td>
      </tr>
    </div>
</div>

  <div class = "review-add">
  <%=link_to "Write a review", new_product_review_path %>
  <%= average_rating %>
  <% @product.reviews.each do |review| %>
  <p><%= review.rating %></p>
  <p><%= review.title %></p>
  <p><%= review.author %></p>
  <p><%= review.created_at.to_datetime.strftime("%D") %></p>
  <p><%= review.comment %></p>
  <% end %>
  </div>
</div>
