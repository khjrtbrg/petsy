<h1>Add a Review</h1>


<% levels = [1,2,3,4,5] %>
<%= form_for @review, url: {action: "create"} do |f| %>
    <%= render "shared/error_messages", obj: @review, col: :user_id %><br/><br/>

    <%= f.label :rating %> (Required) <%= render "shared/error_messages", obj: @review, col: :rating %>
    <br/>
    <%= f.select(:rating, levels.map {|value| [value, value]}) %>
    <br/><br/>

    <%= f.label :title %>
    <br/>
    <%= f.text_field :title %>
    <br/><br/>

    <%= f.label :comment %> (Required) <%= render "shared/error_messages", obj: @review, col: :comment %>
    <br/>
    <%= f.text_area :comment %>
    <br/><br/>

    <%= f.label :author %>
    <br/>
    <%= f.text_field :author %>
    <br/><br/>

    <%= f.submit %>

<% end %>
