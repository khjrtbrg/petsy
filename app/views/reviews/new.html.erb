<h1>Add a Review</h1>



<%= form_for @review, url: {action: "create"} do |f| %>

    <%= f.label :rating %> (Required)<br/>
    <%= f.select(:rating, @levels.map {|value| [value, value]}) %><br/><br/><%= render "shared/error_messages", obj: @review, col: :rating %>

    <%= f.label :title %><br/>
    <%= f.text_field :title %><br/><br/>

    <%= f.label :comment %> (Required)<br/>
    <%= f.text_area :comment %><br/><br/> <%= render "shared/error_messages", obj: @review, col: :comment %>

    <%= f.label :author %><br/>
    <%= f.text_field :author %><br/><br/>

    <%= f.submit %>

<% end %>
