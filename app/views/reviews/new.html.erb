<h2 class = "page-title">Add a Review</h2>

<% levels = [1,2,3,4,5] %>

<div class="form-wrapper">
  <%= form_for @review, url: {action: "create"} do |f| %>
    <div class="form-field">
      <%= render "shared/error_messages", obj: @review, col: :user_id %>
    </div>

    <div class="form-field">
      <%= f.label :rating %><%= render "shared/error_messages", obj: @review, col: :rating %>
      <%= f.select(:rating, levels.map {|value| [value, value]}) %>
    </div>

    <div class="form-field">
      <%= f.label :title %>
      <%= f.text_field :title %>
    </div>

    <div class="form-field">
      <%= f.label :comment %><%= render "shared/error_messages", obj: @review, col: :comment %>
      <%= f.text_area :comment %>
    </div>

    <div class="form-field">
      <%= f.label :author %>
      <%= f.text_field :author %>
    </div>

    <div class="form-field">
      <%= f.submit %>
    </div>

  <% end %>
</div>
