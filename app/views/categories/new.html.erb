<h2 class = "page-title">Add a Category</h2>

<div class="form-wrapper">
  <%= form_for @category, url: {action: "create"} do |f| %>
    <div class="form-field">
      <%= f.label :name, "Name:" %>
      <%= f.text_field :name %>
    </div>

    <div class="form-field">
      <div class="submit-button">
        <%= f.submit %>
      </div>
    </div>

  <% end %>
</div>
